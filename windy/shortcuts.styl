// https://tailwindcss.com/docs/float
clearfix()
  &::after
    content: "";
    display: table;
    clear: both;

// https://tailwindcss.com/docs/display#hidden
hidden()
  display none

// Paddings

p-l(value)
  padding-left rex(value)

p-r(value)
  padding-right rex(value)

p-t(value)
  padding-top rex(value)

p-b(value)
  padding-bottom rex(value)

p-x(value)
  padding-left rex(value)
  padding-right rex(value)

p-y(value)
  padding-top rex(value)
  padding-bottom rex(value)

p(x, y = -1)
  if y >= 0
    padding rex(y) rex(x)
  else
    padding rex(x)

// Margins

m-l(value)
  margin-left rex(value)

m-r(value)
  margin-right rex(value)

m-t(value)
  margin-top rex(value)

m-b(value)
  margin-bottom rex(value)

m-y(value)
  margin-top rex(value)
  margin-bottom rex(value)

m-x(value)
  margin-left rex(value)
  margin-right rex(value)

m-y(value)
  margin-top rex(value)
  margin-bottom rex(value)

m(value)
  margin rex(value)

