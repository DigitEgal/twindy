@require "windy/vendor.styl"

// https://tailwindcss.com/docs/float
clearfix()
  &::after
    content: "";
    display: table;
    clear: both;

// https://tailwindcss.com/docs/display#hidden
hidden()
  display none

// Units

px(value)
  (value / 16) rem

// Paddings

p-l(px)
  padding-left (px / 16) rem

p-r(px)
  padding-right (px / 16) rem

p-t(px)
  padding-top (px / 16) rem

p-b(px)
  padding-bottom (px / 16) rem

p-x(px)
  padding-left (px / 16) rem
  padding-right (px / 16) rem

p-y(px)
  padding-top (px / 16) rem
  padding-bottom (px / 16) rem

p(x, y = -1)
  if y >= 0
    padding (y / 16) rem (x / 16) rem
  else
    padding (x / 16) rem

// Margins

m-l(px)
  margin-left (px / 16) rem

m-r(px)
  margin-right (px / 16) rem

m-t(px)
  margin-top (px / 16) rem

m-b(px)
  margin-bottom (px / 16) rem

m-y(px)
  margin-top (px / 16) rem
  margin-bottom (px / 16) rem

m-x(px)
  margin-left (px / 16) rem
  margin-right (px / 16) rem

m-y(px)
  margin-top (px / 16) rem
  margin-bottom (px / 16) rem

m(px)
  margin (px / 16) rem

