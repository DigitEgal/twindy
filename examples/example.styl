@import "../index.styl"

windy-reset()

body
  background -teal-50
  font-family sans-serif
  p 16

.box
  background white
  shadow lg
  rounded lg
  padding 0 16

  &_title
    bold()

.animation
  background rgba(66, 153, 225, 0.5)
  absolute top 100px left 100px
  background red
  // windy windy-transform
  do transform-gpu
  transform-scale 50
  transform-rotate 90

button
  ring 3
  do animation
  // windy-animation go
  windy grow vscroll

// windy-animation default

.list
  // border 1px solid red
  background -teal-100
  // space-y 16
  divide-y(padding:8)

  .item
    background -teal-200

demo(d = windy)
  if d == windy
    demo2 xdefault
  else
    demo2 d

.test
  demo apply
  apply demo
